# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Your Name <youremail@domain.com>
pkgname=apple-t2-audio-config
pkgver=0.3
pkgrel=1
pkgdesc="System configuration files for the apple-bce audio driver"
arch=('any')
url="https://github.com/kekrby/t2-better-audio"
license=('MIT')
replaces=(apple-t2-audio-config-alt)
optdepends=(
  'linux-t2: for audio kernel module'
  'apple-bce: for audio kernel module'
  pulseaudio
  pipewire
)
source=(
  audio::git+https://github.com/kekrby/t2-better-audio#commit=adbd7640b4055dc79a334ea4d31572e9599b4365
)

sha256sums=('SKIP')

package() {
	for dir in '/usr/share/alsa-card-profile/mixer/' '$pkgdir/usr/share/pulseaudio/alsa-mixer/'
	do
		mkdir -p $pkgdir$dir
		cp -r $srcdir/audio/files/{profile-sets,paths} $pkgdir$dir
	done
	mkdir -p $pkgdir/usr/lib/udev/rules.d
	cp -rv $srcdir/audio/files/91-audio-custom.rules $pkgdir/usr/lib/udev/rules.d/91-apple-t2-audio.rules
}


